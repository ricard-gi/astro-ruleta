import Zona from "../components/Zona.astro";
import Bola from "../components/Bola.astro";

let gameData = [];
if (Astro.cookies.has("ruleta")) {
	let cookie = Astro.cookies.get("ruleta");
	gameData = JSON.parse(cookie.value); // ull! el valor està a .value
} else {
	Astro.cookies.set("ruleta", "[]", { path: "/" });
	return Astro.redirect("/");
}

let jugades = gameData.length ? gameData.map(e => e.ruleta) : [];

let {data, jugada, ruleta,resultat,  saldo} = gameData.length ? gameData[gameData.length - 1] : {data:0,jugada:0,ruleta:0,saldo:0, resultat:0};

